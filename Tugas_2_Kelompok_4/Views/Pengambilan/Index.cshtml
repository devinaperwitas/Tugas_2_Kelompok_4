@model List<Tugas_2_Kelompok_4.Models.Pengambilan>
@{
    ViewData["Title"] = "Pengambilan Paket";
    int no = 1;
}

<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Transaksi Pengambilan</h5>
                    <hr />
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="row">
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <i class="bi bi-check-circle me-1"></i>
                                <strong>Sukses!</strong> @TempData["SuccessMessage"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        </div>
                    }

                    <a class="btn btn-primary" asp-action="Create">Tambah Transaksi Pengambilan</a>
                    <!-- Table with stripped rows -->
                    <table class="table datatable">
                        <thead>
                            <tr>
                                <th scope="col">No</th>
                                <th scope="col">ID Pengambilan</th>
                                <th scope="col">Jenis Paket</th>
                                <th scope="col">Nama Pemilik</th>
                                <th scope="col">Nama Pengambil</th>
                                <th scope="col">NIM/NPK</th>
                                <th scope="col">Tanggal Pengambilan</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var pengambilan in Model)
                            {
                                <tr>
                                    <td>@(no++)</td>
                                    <td>@pengambilan.id_pengambilan</td>
                                    <td>@pengambilan.jenis</td>
                                    <td>@pengambilan.nama_pemilik</td>
                                    <td>@pengambilan.nama_pengambil</td>
                                    <td>@pengambilan.nim_npk</td>
                                    <td>@pengambilan.tanggal_pengambilan</td>
                                    <td>
                                        <button class="btn btn-sm btn-info btn-info-modal" data-toggle="modal" data-target="#infoModal_@pengambilan.id_pengambilan">
                                            <i class="fas fa-info-circle"></i>
                                        </button>

                                        <div class="modal fade" id="infoModal_@pengambilan.id_pengambilan" tabindex="-1" role="dialog" aria-labelledby="infoModalLabel" aria-hidden="true">
                                            <div class="modal-dialog modal-dialog-centered">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title">Informasi Pengambilan</h5>
                                                        <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close">
                                                        </button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <strong>Id Pengambilan:</strong> @pengambilan.id_pengambilan<br />
                                                        <strong>Jenis Paket:</strong> @pengambilan.jenis<br />
                                                        <strong>Nama Pemilik:</strong> @pengambilan.nama_pemilik<br />
                                                        <strong>Nama Pengambil:</strong> @pengambilan.nama_pengambil<br />
                                                        <strong>NIM/NPK:</strong> @pengambilan.nim_npk<br />
                                                        <strong>Tanggal Pengambilan:</strong> @pengambilan.tanggal_pengambilan<br />
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Tutup</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>


                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

